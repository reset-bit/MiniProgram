/*新闻列表*/
.news-list{
  min-height: 600rpx;
  padding: 15rpx;
  margin-top: 10rpx;
}

.news-item{
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid gray;
}

.news-item image{
  height: 150rpx;
  width: 230rpx;
  margin: 10rpx;
}

.news-item text{
  width: 100%;
  height: 60rpx;
  font-size: 35rpx;
}