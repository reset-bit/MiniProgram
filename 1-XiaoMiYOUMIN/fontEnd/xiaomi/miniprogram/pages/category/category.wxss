/* miniprogram/pages/category/category.wxss */
page {
    height: 100%;
}

.container {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.left {
    height: 100%;
    flex-shrink: 0;
    background-color: #fff;
    padding: 0 20rpx;
    display: flex;
    flex-direction: column;
}

.list-main-item {
    flex-grow: 1;
    font-size: 16px;
    display: flex;
    align-items: center;
}

.list-main-item text {
    box-sizing: border-box;
    padding: 8rpx 14rpx;
}

.list-main-item .active {
    background-color: #E9B050;
    border-radius: 30rpx;
    color: #fff;
}

.right {
    height: 100%;
    flex-grow: 1;
    box-sizing: border-box;
    padding: 10rpx;
}

.list-main-avatar {
    width: 100%;
    height: 230rpx;
    border-radius: 20rpx;
}

.list-sub {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
    border-radius: 20rpx;
    margin-top: 10rpx;
}

.list-sub-item {
    height: 130rpx;
    width: 33.333333%;
    box-sizing: border-box;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.list-sub-item image {
    height: 120rpx;
    width: 100rpx;
    display: block;
}

.list-sub-item text {
    font-size: 14px;
}

.tip {
    margin-top: 20rpx;
    text-align: center;
    color: gray;
}