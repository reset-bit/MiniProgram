<!--pages/index/index.wxml-->
<view class="container">
  <image src="{{img_src}}"></image>
  <text>{{username}}</text><!--变量写法-->
  <button open-type="getUserInfo" bindgetuserinfo="getMyInfo">点击获取头像和昵称</button>
  <!--open-type="getUserInfo"：激活获取微信用户信息功能-->
  <!--bindgetuserinfo="getMyInfo"：获得数据并传递给自定义函数getMyInfo-->
</view>
