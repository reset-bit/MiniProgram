/* miniprogram/pages/personal-center/plan-btn/plan-btn.wxss */
page{
  background: whitesmoke;
}

.container{
  width: 100%;
  height: 100%;
}

.plan-detail{
  width: 90%;
  height: auto;
  margin: 20rpx 5% 20rpx 5%;
  background: white;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  border-radius: 20rpx;
}

.col{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
}

.name{
  width: 66%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.name-detail{
  margin: 20rpx;
}

.name image{
  width: 40rpx;
  height: 40rpx;
  /* margin-left: 30%; */
}

.time{
  width: 30%;
  margin-right: 20rpx;
}

.other-detail{
  width: 100%;
  margin: 10rpx 0rpx 10rpx 20rpx;
}

.bottom{
  width: 70%;
  margin: 30rpx 15% 0rpx 15%;
  font-size: 25rpx;
  color: gray;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 80rpx;
}

.bottom .divider{
  width: 90%;
  height: 5rpx;
  background: #E0E3DA;
  margin: 10rpx;
}