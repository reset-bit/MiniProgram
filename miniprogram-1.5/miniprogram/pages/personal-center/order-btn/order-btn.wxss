/* miniprogram/pages/personal-center/order-btn/order-btn.wxss */
page{
  background: whitesmoke;
}

.container{
  width: 100%;
  height: 100%;
}

.plan-detail{
  width: 90%;
  height: auto;
  margin: 20rpx 5% 20rpx 5%;
  background: white;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  border-radius: 20rpx;
}

.col{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
}

.col-name{
  width: 66%;
  margin: 20rpx;
}

.status{
  width: 20%;
  margin: 10rpx;
  font-size: 30rpx;
}

.bottom{
  width: 70%;
  margin: 30rpx 15% 0rpx 15%;
  font-size: 25rpx;
  color: gray;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 80rpx;
}

.bottom .divider{
  width: 90%;
  height: 5rpx;
  background: #E0E3DA;
  margin: 10rpx;
}